<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentBlack"
    tools:context=".PhotoActivity">

    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/photo_margin"
        android:adjustViewBounds="true"
        android:src="@drawable/imagenotfound"/>

    <ImageView
        android:id="@+id/photo_close"
        android:layout_width="@dimen/photo_close_size"
        android:layout_height="@dimen/photo_close_size"
        app:layout_constraintTop_toTopOf="@+id/photo_image"
        app:layout_constraintRight_toRightOf="@+id/photo_image"
        android:src="@drawable/ic_cancel_blue"/>

</android.support.constraint.ConstraintLayout>
